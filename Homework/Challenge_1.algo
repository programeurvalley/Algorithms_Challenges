ALGORITHM Challenge_Homework_1
VAR
    arr : ARRAY_OF INTEGER[50];
    len, i , sum : INTEGER;
BEGIN
    
    Write("Give me the array length");
    Read(len);

    FOR i FROM 1 TO len STEP 1  DO
        Read(arr[i]);
    END_FOR
    
    sum := 0;
    
    FOR i FROM 1 TO arr.length STEP 1 DO
        sum +:= arr[i];
    END_FOR
    
    Write("The sum of the Array is : ",sum);
    
END